@model WaffleWebWorksTpFinal.Models.Carrera

@{
    ViewData["Title"] = "Detalle";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <br>
    <h4>@Html.DisplayNameFor(model=> model.Description)</h4>
    

    <hr />
    <dl class="row">
        

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
     
    @Html.ActionLink("Eliminar", "Delete", new {  id = Model.Id }) |
    <a  width="100%"  href="#victorModal" role="button" class="btn btn-large btn-primary" data-toggle="modal">Modificar   </a> 
     <p>
    <div id="victorModal" class="modal fade">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h4 class="container modal-title">@Html.DisplayFor(model => model.Name)</h4>
                                        </div>
                          
                                        <div class="modal-body">
                                            <form asp-action="Detalle">
                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                <input type="hidden" asp-for="Id" />
                                                <div class="form-group">
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Name" class="control-label"></label>
                                                    <input asp-for="Name"   class="form-control" />
                                                    <span asp-validation-for="Name" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="Description" class="control-label"></label>
                                                    <!--                                                     <textarea asp-for="Description" class="form-control " rows="10" cols="40">@Html.DisplayFor(model => model.Description)</textarea> 
-->
                                                    <textarea asp-for="Description" class="form-control " rows="10" cols="40">@Html.DisplayFor(model => model.Description)</textarea> 
                                                                                                        <span asp-validation-for="Description" class="text-danger"></span>
                                                </div>
                                                
           
            
                                                <div class="form-group">
                                                    <br />
                                                    <input type="submit" value="Editar" class="btn btn-primary" />
                                                </div>
                                                
                  
                                            </form>
                                            
                                            <div class="modal-footer">
                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                                                    @Html.ActionLink("Eliminar", "Delete", new {  id = Model.Id })
                                                    
                                            </div>
                                          </div>     
                                       </div>   
                                 </div>
                    </div>
    </p>

</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
